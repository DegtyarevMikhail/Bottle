<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/stone">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bottle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/babochka"
        />





    <HorizontalScrollView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/scrollBack_02"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/back_02"
                android:layout_margin="15dp"
                />
            <ImageView
                android:id="@+id/scrollBack_03"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/back_03"
                android:layout_margin="15dp"
                />
            <ImageView
                android:id="@+id/scrollBack_04"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/back_04"
                android:layout_margin="15dp"
                />

            <ImageView
                android:id="@+id/scrollBack_05"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/back_05"
                android:layout_margin="15dp"
                />

            <ImageView
                android:id="@+id/scrollBack_06"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/back_06"
                android:layout_margin="15dp"
                />


        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>